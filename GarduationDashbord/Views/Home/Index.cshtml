@using GarduationDashbord.Controllers
@model List<Person>

<div class="container mt-4">
    <div class="row justify-content-center">
        @foreach (var item in Model.Select((person, index) => new { person, index }))
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card shadow-sm animate-card" style="animation-delay: @(item.index * 0.5)s;">
                    @if (!string.IsNullOrEmpty(item.person.Image))
                    {
                        <img class="card-img-top user-image" src="@item.person.Image" alt="User Image">
                    }
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold text-primary">@item.person.Name</h5>
                        <p class="card-text typewriter" style="animation-delay: @(1 + item.index * 0.5)s;"><i class="fas fa-map-marker-alt text-danger"></i> @item.person.Role</p>
                        <p class="card-text typewriter" style="animation-delay: @(1.5 + item.index * 0.5)s;"><i class="fas fa-envelope text-info"></i> @item.person.Bdata</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="analytics-section">
    <h2>Dashboard Insights</h2>
    <div class="row">
        <!-- Charts Section -->
        <div class="col-lg-6 col-md-12">
            <canvas id="visitorChart"></canvas>
        </div>
        <div class="col-lg-6 col-md-12">
            <canvas id="bookingChart"></canvas>
        </div>
    </div>

    <!-- Tools and Technologies Section -->
    <div class="tools-section mt-5">
        <h2>Technologies & Tools</h2>
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="tool-card">
                    <i class="fab fa-microsoft text-primary"></i>
                    <h5>ASP.NET Core</h5>
                    <p>Powerful framework for building scalable web applications and APIs.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="tool-card">
                    <i class="fab fa-js-square text-warning"></i>
                    <h5>JavaScript</h5>
                    <p>Dynamic programming language for interactive and responsive UIs.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="tool-card">
                    <i class="fas fa-database text-info"></i>
                    <h5>SQL Server</h5>
                    <p>Robust database management system to store and retrieve data efficiently.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<footer class="footer bg-dark text-white py-4">
    <div class="container text-center">
        <div class="row">
            <div class="col-md-12">
                <p class="mb-2">Connect with us:</p>
                <div class="social-links">
                    <!-- Facebook -->
                    <a href="https://www.facebook.com/profile.php?id=100015962448326" class="text-white mx-2" target="_blank" rel="noopener noreferrer">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                   
                    <!-- GitHub -->
                    <a href="https://github.com/" class="text-white mx-2" target="_blank" rel="noopener noreferrer">
                        <i class="fab fa-github"></i>
                    </a>
                    <!-- LinkedIn -->
                    <a href="https://www.linkedin.com/" class="text-white mx-2" target="_blank" rel="noopener noreferrer">
                        <i class="fab fa-linkedin"></i>
                    </a>
                </div>
                <p class="mt-3">&copy; 2025 Graduation Dashboard. All rights reserved.</p>
            </div>
        </div>
    </div>
</footer>
