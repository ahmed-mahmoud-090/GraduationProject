<!-- ✅ تحسينات CSS مع أنيميشن -->
<style>
    .card {
        width: 100%;
        max-width: 300px;
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        opacity: 0;
        transform: scale(1.2);
        height: 500px;
    }

    .animate-card {
        animation: fadeInShrink 1.5s forwards;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
    }

    .user-image {
        width: 100%;
        height: 220px;
        object-fit: cover;
        border-bottom: 3px solid #ddd;
    }

    .card-body {
        background-color: #fdfdfd;
        padding: 20px;
        border-top: 3px solid #ddd;
        transition: opacity 0.8s ease-in-out;
    }

    .card-title {
        font-size: 22px;
        font-weight: bold;
    }

    .card-text {
        font-size: 16px;
        margin-bottom: 10px;
    }

    /* ✅ أنيميشن يجعل الكارد يظهر كبيرًا ثم يصغر */
    @@keyframes fadeInShrink {
        from {
            opacity: 0;
            transform: scale(1.2);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    /* ✅ تأثير الكتابة الحيّة للنص */
    .typewriter {
        overflow: hidden;
        border-right: 2px solid black;
        white-space: nowrap;
        display: inline-block;
        animation: typing 2s steps(30, end) forwards, blinkCursor 2s steps(30, end) forwards;
    }

    @@keyframes typing {
        from {
            width: 0;
        }

        to {
            width: 100%;
        }
    }

    /* ✅ المؤشر الوامض سيتوقف بعد انتهاء الكتابة */
    @@keyframes blinkCursor {
        50% {
            border-color: black;
        }

        100% {
            border-color: transparent;
        }
    }
</style>
