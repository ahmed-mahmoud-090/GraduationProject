@model List<Type_place>

<a asp-action="Create" class="btn btn-outline-success w-100 mb-3">Create New Place</a>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card custom-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><strong>Name:</strong> @item.Name</h5>

                        <div class="mt-auto">
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success w-100 mb-2">Update</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger w-100">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .custom-card {
        display: flex;
        flex-direction: column;
        height: 220px; /* ✅ تقليل الطول ليكون متناسقًا */
        border-radius: 10px; /* ✅ تقريب الزوايا */
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* ✅ إضافة ظل */
        transition: transform 0.2s ease-in-out;
        padding: 10px;
    }

        .custom-card:hover {
            transform: scale(1.05); /* ✅ تأثير عند تمرير الماوس */
        }

    .card-body {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 10px;
    }

    .card-title {
        font-size: 16px;
        font-weight: bold;
    }

    .btn {
        font-size: 14px;
        padding: 8px;
    }
</style>
