@model List<Tourismt_Place>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card custom-card">
                    @if (!string.IsNullOrEmpty(item.Image))
                    {
                        <div class="image-container">
                            <img class="card-img-top" src="@item.Image" alt="Tourism Place Image">
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title"><strong>Name:</strong> @item.Name</h6>
                        <h6 class="card-title"><strong>Rating:</strong> @item.Rating</h6>
                        <h6 class="card-title"><strong>City ID:</strong> @item.CityId</h6>
                        <h6 class="card-title"><strong>Description:</strong> @item.Discription</h6>
                        <h6 class="card-title"><strong>Ticket Price:</strong> @item.TicketPrice</h6>
                        <h6 class="card-title"><strong>Type of Place:</strong> @item.Typeofplaceid</h6>

                        <div class="mt-auto">
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-success w-100 mb-2">Update</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger w-100">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .custom-card {
        display: flex;
        flex-direction: column;
        height: 450px; /* ✅ تقليل الطول قليلاً */
        border-radius: 10px; /* ✅ تقريب الزوايا */
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* ✅ إضافة ظل */
        transition: transform 0.2s ease-in-out;
        padding: 10px;
    }

        .custom-card:hover {
            transform: scale(1.05); /* ✅ تأثير عند تمرير الماوس */
        }

    .image-container {
        height: 40%; /* ✅ ضبط حجم الصورة */
        width: 100%;
        overflow: hidden;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .card-img-top {
        width: 100%;
        height: 100%;
        object-fit: cover; /* ✅ منع تشويه الصورة */
    }

    .card-body {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 10px;
    }

    .card-title {
        font-size: 15px; /* ✅ تصغير النص قليلاً */
        margin-bottom: 4px;
    }

    .btn {
        font-size: 14px;
        padding: 8px;
    }
</style>
