@model List<Embasse>

<form class="d-flex mx-auto w-50 mb-3" asp-action="Search" method="get">
    <input class="form-control me-2 fs-5" type="search" name="query" placeholder="Search..." aria-label="Search">
    <button class="btn btn-outline-success fs-5" type="submit">
        <i class="fas fa-search"></i>
    </button>
</form>

<a asp-action="Create" class="btn btn-outline-success w-100 mb-2">Create New Embasse</a>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card custom-card">

                    @if (!string.IsNullOrEmpty(item.Image))
                    {
                        <div class="image-container">
                            <img class="card-img-top" src="@item.Image" alt="Embassy Image">
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title">Name: @item.Name</h6>
                        <h6 class="card-title">Working Hours: @item.WorkingHours</h6>
                        <h6 class="card-title">Contact Info: @item.ContactInfo</h6>
                        <h6 class="card-title">City ID: @item.CityId</h6>
                        <h6 class="card-title">Country: @item.Country</h6>

                        <div class="mt-auto">
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-success w-100 mb-2">Update</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger w-100">Delete</a>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>

<style>
    .custom-card {
        display: flex;
        flex-direction: column;
        height: 450px; /* ✅ تقليل الطول */
        border-radius: 10px; /* ✅ تحسين شكل الزوايا */
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* ✅ إضافة ظل خفيف */
        transition: transform 0.2s ease-in-out;
    }

        .custom-card:hover {
            transform: scale(1.05); /* ✅ تأثير عند تمرير الماوس */
        }

    .image-container {
        height: 40%; /* ✅ ضبط ارتفاع الصورة */
        width: 100%;
        overflow: hidden;
    }

    .card-img-top {
        width: 100%;
        height: 100%;
        object-fit: cover; /* ✅ منع تشويه الصورة */
    }

    .card-body {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 10px;
    }

    .card-title {
        font-size: 16px; /* ✅ تصغير حجم النص */
        margin-bottom: 4px;
    }

    .btn {
        font-size: 14px;
        padding: 8px;
    }
</style>
