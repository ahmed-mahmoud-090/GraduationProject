@model Embasse

<!-- Registration 8 - Bootstrap Brain Component -->
<section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xxl-11">
                <div class="card border-light-subtle shadow-sm">
                    <div class="row g-0">
                        <form method="post" enctype="multipart/form-data">
                            <div class="col-12 col-md-6">
                                <input type="file" id="fileInput" name="ImageFile" class="form-control" onchange="previewImage(event)">

                                <img class="img-fluid rounded-start w-100 h-100 object-fit-cover mt-3"
                                     id="output"
                                     src="@(!string.IsNullOrEmpty(Model.Image) ? Url.Content("~/images/" + Model.Image) : "")"
                                     alt="User Image">
                            </div>

                            @section Scripts
                            {
                                <script>
                                    function previewImage(event) {
                                        var file = event.target.files[0];
                                        if (!file) return;

                                        var reader = new FileReader();
                                        reader.onload = function () {
                                            document.getElementById('output').src = reader.result;
                                        };
                                        reader.readAsDataURL(file);
                                    }
                                </script>
                            }

                            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                                <div class="col-12 col-lg-11 col-xl-10">
                                    <div class="card-body p-3 p-md-4 p-xl-5">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="mb-5">

                                                    <h2 class="h4 text-center">Update Information</h2>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row gy-3 overflow-hidden">
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="Name">
                                                    <label for="Name" class="form-label">Name</label>
                                                    <span asp-validation-for="Name" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="row gy-3 overflow-hidden">
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-controller="Embasse" asp-for="ContactInfo" type="text" class="form-control" name="ContactInfo" id="ContactInfo" value="@Model.ContactInfo" placeholder="ContactInfo">
                                                        <label for="ContactInfo" class="form-label">ContactInfo</label>
                                                        <span asp-validation-for="ContactInfo" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-controller="Bank" asp-for="@Model.CityId" type="number" class="form-control" name="CityID" id="CityID" placeholder="CityID">
                                                        <label for="CityID" class="form-label">CityID</label>
                                                        <span asp-validation-for="CityId" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-controller="Embasse" asp-for="@Model.WorkingHours" type="number" class="form-control" name="WorkingHours" id="WorkingHours" placeholder="WorkingHours" required>
                                                        <label for="WorkingHours" class="form-label">WorkingHours</label>
                                                        <span asp-validation-for="WorkingHours" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                 <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-controller="Embasse" asp-for="@Model.Country" type="text" class="form-control" name="Country" id="Country" placeholder="Country" required>
                                                        <label for="Country" class="form-label">Country</label>
                                                        <span asp-validation-for="Country" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <div class="d-grid">
                                                        <button class="btn btn-dark btn-lg" type="submit">Save</button>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <
                                <
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>