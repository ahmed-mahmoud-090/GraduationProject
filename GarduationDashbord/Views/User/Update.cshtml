

@model User 

<!-- Registration 8 - Bootstrap Brain Component -->
<section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xxl-11">
                <div class="card border-light-subtle shadow-sm">
                    <div class="row g-0">
                        <form method="post" enctype="multipart/form-data">
                            <div class="col-12 col-md-6">
                                <input type="file" id="fileInput" name="ImageFile" class="form-control" onchange="previewImage(event)">

                                <img class="img-fluid rounded-start w-100 h-100 object-fit-cover mt-3"
                                     id="output"
                                     src="@(!string.IsNullOrEmpty(Model.ImageBytes) ? Url.Content("~/images/" + Model.ImageBytes) : "")"
                                     alt="User Image">
                            </div>

                            @section Scripts
                            {
                                <script>
                                    function previewImage(event) {
                                        var file = event.target.files[0];
                                        if (!file) return;

                                        var reader = new FileReader();
                                        reader.onload = function () {
                                            document.getElementById('output').src = reader.result;
                                        };
                                        reader.readAsDataURL(file);
                                    }
                                </script>
                            }

                            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                                <div class="col-12 col-lg-11 col-xl-10">
                                    <div class="card-body p-3 p-md-4 p-xl-5">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="mb-5">

                                                    <h2 class="h4 text-center">Update Information</h2>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row gy-3 overflow-hidden">
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="FirstName" type="text" class="form-control" id="firstName" placeholder="UserName">
                                                    <label for="firstName" class="form-label">UserName</label>
                                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="row gy-3 overflow-hidden">
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-controller="User" asp-for="SacondName" type="text" class="form-control" name="SacondName" id="SacondName" value="@Model.SacondName" placeholder="SacondName" >
                                                        <label for="SacondName" class="form-label">SacondName</label>
                                                        <span asp-validation-for="SacondName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-controller="User" asp-for="@Model.BDate" type="date" class="form-control" name="birthData" id="birthData" placeholder="birthData" >
                                                        <label for="BirthData" class="form-label">BirthData</label>
                                                        <span asp-validation-for="BDate" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-controller="User" asp-for="@Model.Email" type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                                                        <label for="email" class="form-label">Email</label>
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-controller="User" asp-for="@Model.Password" type="password" class="form-control" name="password" id="password" value="" placeholder="Password" required>
                                                        <label for="password" class="form-label">Password</label>
                                                        <span asp-validation-for="Password" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-controller="User" asp-for="@Model.City" type="text" class="form-control" name="City" id="City" value="" placeholder="City" required>
                                                        <label for="City" class="form-label">City</label>
                                                        <span asp-validation-for="City" class="text-danger"></span>
                                                    </div>
                                                </div>
                                               
                                                <div class="col-12">
                                                    <div class="d-grid">
                                                        <button class="btn btn-dark btn-lg" type="submit">Save</button>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                        <
                            <</form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>