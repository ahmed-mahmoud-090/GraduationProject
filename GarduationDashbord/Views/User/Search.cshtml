@model List<User>

<div class="container mt-4">
    
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card shadow-sm">
                    @if (item.ImageBytes != null)
                    {
                        <img class="card-img-top user-image" src="@item.ImageBytes" alt="User Image">
                    }
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold text-primary">@item.FirstName @item.SacondName</h5>
                        <p class="card-text"><i class="fas fa-map-marker-alt text-danger"></i> @item.City</p>
                        <p class="card-text"><i class="fas fa-envelope text-info"></i> @item.Email</p>
                        <p class="card-text"><i class="fas fa-birthday-cake text-warning"></i> @item.BDate.ToShortDateString()</p>

                        <div class="d-grid gap-2 mt-3">
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-success">Update</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- ✅ تحسينات CSS -->
<style>
    .card {
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

    .user-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-bottom: 2px solid #ddd;
    }

    .card-body {
        background-color: #f8f9fa;
        padding: 15px;
        border-top: 2px solid #ddd;
    }

    .card-title {
        font-size: 18px;
    }

    .card-text {
        font-size: 14px;
        margin-bottom: 5px;
    }
</style>
