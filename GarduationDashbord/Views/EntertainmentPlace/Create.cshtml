@model EntertainmentPlace

<section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xxl-11">
                <div class="card border-light-subtle shadow-sm">
                    <div class="row g-0">
                        <form method="post" enctype="multipart/form-data">
                           
                            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                                <div class="col-12 col-lg-11 col-xl-10">
                                    <div class="card-body p-3 p-md-4 p-xl-5">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="mb-5">

                                                    <h2 class="h4 text-center">Create New EnternamitPlace</h2>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row gy-3 overflow-hidden">
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="Name">
                                                    <label for="firstName" class="form-label">UserName</label>
                                                    <span asp-validation-for="Name" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="row gy-3 overflow-hidden">
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-for="ContactInfo" type="text" class="form-control" name="ContactInfo" id="ContactInfo" placeholder="ContactInfo">
                                                        <label for="ContactInfo" class="form-label">ContactInfo</label>
                                                        <span asp-validation-for="ContactInfo" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-for="@Model.PlaceType" type="number" class="form-control" name="PlaceType" id="PlaceType" placeholder="PlaceType">
                                                        <label for="PlaceType" class="form-label">PlaceType</label>
                                                        <span asp-validation-for="PlaceType" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input  asp-for="@Model.CityId" type="number" class="form-control" name="CityId" id="CityId" placeholder="CityId" required>
                                                        <label for="CityId" class="form-label">CityId</label>
                                                        <span asp-validation-for="CityId" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                  <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-for="@Model.OpiningHour" type="number" class="form-control" name="OpiningHour" id="OpiningHour" placeholder="OpiningHour" required>
                                                        <label for="OpiningHour" class="form-label">OpiningHour</label>
                                                        <span asp-validation-for="OpiningHour" class="text-danger"></span>
                                                    </div>
                                                </div>


                                                <div class="col-12">
                                                    <div class="d-grid">
                                                        <button class="btn btn-dark btn-lg" type="submit">Save</button>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <
                                <
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

