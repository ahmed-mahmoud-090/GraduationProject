<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GarduationDashbord</title>

    <!-- ✅ استدعاء Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   
    @* <link rel="stylesheet" href="~/lib/bootstrap/bootstrap.min (7).css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GarduationDashbord.styles.css" asp-append-version="true" />

    <!-- ✅ أيقونات FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <style>
        /* ✅ Navbar */
        .navbar {
            width: 100%;
            height: 60px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #000d15;
            color: white;
            padding: 10px 20px;
            font-size: 18px;
            z-index: 1000;
        }

        /* ✅ Sidebar */
        .sidebar {
            width: 220px;
            height: calc(100vh - 60px); /* اجعل ارتفاعه مناسبًا أسفل الناف بار */
            position: fixed;
            top: 60px;
            left: 0;
            background-color: #000d15;
            padding-top: 20px;
            color: white;
            transition: all 0.3s ease;
        }

            .sidebar h4 {
                text-align: center;
                font-size: 18px;
                font-weight: bold;
                padding-bottom: 15px;
                border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            }

            .sidebar .nav-link {
                color: white;
                padding: 12px 15px;
                display: flex;
                align-items: center;
                font-size: 16px;
                transition: background 0.3s;
            }

                .sidebar .nav-link i {
                    margin-right: 10px;
                    font-size: 18px;
                }

                .sidebar .nav-link:hover {
                    background-color: #1a252f;
                }

        /* ✅ محتوى الصفحة */
        .content {
            margin-left: 220px;
            margin-top: 60px; /* حتى لا يغطيه الـ Navbar */
            width: calc(100% - 220px);
            min-height: 100vh;
            padding: 20px;
        }

        /* ✅ تحسين تخطيط الصفحة */
        .container-fluid {
            padding: 20px;
        }

        body {
            background-color: #001722;
             color: white;
         }

        .card-title,
        .card-text {
            color: black !important;
           
        }

        .card {
            background-color: #FFFFFF; /* أبيض نقي */
            color: black;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            border: 1px solid #ddd;
        }
    </style>
</head>
<body>

    <!-- ✅ Navbar -->
    <!-- ✅ Navbar -->
    <nav class="navbar d-flex justify-content-between align-items-center px-3">
        <!-- العنوان -->
        <a class="btn btn-outline-light me-2" asp-controller="Home" asp-action="Index">
            <i class="fa-solid fa-chart-line" style="color: #007bff; font-size: 24px;"></i>
            Amita Dashboard
        </a>

       
        <div>
            <a class="btn btn-outline-light me-2" asp-controller="Home" asp-action="Index">
                <i class="fas fa-home"></i> Home
            </a>
            <a href="javascript:window.close();" class="btn btn-danger">
                <i class="fas fa-sign-out-alt"></i> Log Out
            </a>
        </div>
    </nav>

    <div class="d-flex">
        <!-- ✅ Sidebar -->
        <div class="sidebar">
            <h4></h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="TourismtPlace" asp-action="Index">
                        <i class="fas fa-landmark"></i> Tourism Place
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Bank" asp-action="Index">
                        <i class="fas fa-university"></i> Bank
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="User" asp-action="Index">
                        <i class="fas fa-users-cog"></i> Manage Users
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Embasse" asp-action="Index">
                        <i class="fas fa-flag-usa"></i> Embassy
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Restaurant" asp-action="Index">
                        <i class="fas fa-utensils"></i> Restaurant
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="City" asp-action="Index">
                        <i class="fas fa-city"></i> City
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="EntertainmentPlace" asp-action="Index">
                        <i class="fas fa-music"></i> Entertainment Place
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="TransportProvider" asp-action="Index">
                        <i class="fas fa-bus-alt"></i> Transport Provider
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Type_place" asp-action="Index">
                        <i class="fas fa-map-marked-alt"></i> Type Place
                    </a>
                </li>
            </ul>
        </div>

        <!-- ✅ محتوى الصفحة -->
        <div class="content">
            <header class="custom-header">
                
            </header>

            <div class="container-fluid">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <!-- ✅ استدعاء الملفات -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
